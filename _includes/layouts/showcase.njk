---
layout: ./base.njk
page_css: showcase.css
---

<main class="showcase">
  <header class="showcase-header">
    <h1>{{ title }}</h1>
    {{ description | md | safe }}
  </header>

  <ul class="showcase-sites">
    {% for site in sites %}
    {% if site.img %}
    <li>
      <figure class="site">
        <a href="{{ site.url }}" class="site-image">
          <img src="{{ site.img }}" alt="Screenshot of the site" width="300" height="200">
        </a>
        <figcaption class="site-description">
          <p class="site-name">
            <a href="{{ site.url }}">
              {{ site.title }}
            </a>
          </p>

          {{ site.description | md | safe }}
          
          {% if site.code %}
            <a href="{{ site.code }}">View code</a>
          {% endif %}
        </figcaption>
      </figure>
    </li>
    {% endif %}
    {% endfor %}
  </ul>
</main>