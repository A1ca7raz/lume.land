---
layout: ./base.njk
page_css: docs.css
---

<div class="doc">
  {% include "templates/tutorial-navbar.njk" %}

  <main class="doc-content">
    <header class="doc-header">
      <p>Step {{ step }}</p>
      <h1>{{ title }}</h1>
    </header>

    <div class="doc-body">
      {{ content | safe }}
    </div>

    <footer class="doc-footer">
      <ul class="doc-pagination">
        {%- set previousPost = search.previousPage(url, "url^=/tutorial/", "step") %}
        {%- if previousPost %}
        <li class="is-prev">
          ← Previous <a href="{{ previousPost.data.url }}" rel="prev">{{ previousPost.data.title }}</a>
        </li>
        {% endif %}

        {%- set nextPost = search.nextPage(url, "url^=/tutorial/", "step") %}
        {%- if nextPost %}
        <li class="is-next">
          Next → <a href="{{ nextPost.data.url }}" rel="next">{{ nextPost.data.title }}</a>
        </li>
        {% endif %}
      </ul>
    </footer>
  </main>
</div>