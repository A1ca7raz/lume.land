{
  "imports": {
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@94d820f51527e126a87910c400aa52fd991ed470/"
  },
  "lock": false,
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "tasks": {
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "./_site"
    ]
  }
}
